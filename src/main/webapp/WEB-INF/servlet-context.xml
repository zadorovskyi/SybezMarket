<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context-3.2.xsd
						http://www.springframework.org/schema/mvc
        				http://www.springframework.org/schema/mvc/spring-mvc.xsd
                     	http://www.springframework.org/schema/util 
       					http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<context:component-scan base-package="org.sybez.controller" />
	<mvc:annotation-driven validator="validator">
		<mvc:message-converters>
			<bean class="org.springframework.http.converter.StringHttpMessageConverter" />
			<bean
				class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />
		</mvc:message-converters>
	</mvc:annotation-driven>
	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<!-- InternalResourceViewResolver will add prefix and suffix to the returns 
		from Controller`s methods, and open the web page -->
	<!-- InternalResourceViewResolver додасть префікс і суфікс до стрічок, які 
		повертаються з методів контролера, та відкриє вказану веб сторінку -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">

		<!-- Prefix is responsible for basic location of web pages -->
		<!-- Префікс відповідає за базове розташування (головну папку) веб сторінок -->
		<property name="prefix">
			<value>/WEB-INF/views/</value>
		</property>
		<!-- Suffix is responsible for web pages expansion -->
		<!-- СУфікс відповідає за розширення веб сторінок -->
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	<import resource="applicationContext.xml" />

</beans>